# ==================================================
# VISUAL STRATEGY CREATOR - CONFIGURACIÓN DE ENTORNO
# ==================================================
# Copia este archivo como .env y completa los valores

# ==================================================
# FLASK CONFIGURACIÓN
# ==================================================
SECRET_KEY=your-secret-key-here-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# ==================================================
# SERVIDOR
# ==================================================
HOST=0.0.0.0
PORT=5000

# ==================================================
# BASE DE DATOS
# ==================================================
DATABASE_PATH=database/tradingbot.db

# ==================================================
# AUTENTICACIÓN - GOOGLE OAUTH
# ==================================================
# Obtén tus credenciales en: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==================================================
# EMAIL SERVICE - GMAIL
# ==================================================
# Para enviar códigos de verificación
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-character-app-password

# ==================================================
# SEGURIDAD
# ==================================================
# Tiempo de expiración de sesiones (en segundos)
SESSION_LIFETIME=2592000
# Tiempo de validez de códigos de verificación (en segundos)
CODE_EXPIRATION=300

# ==================================================
# BINANCE API (OPCIONAL - Para datos en tiempo real)
# ==================================================
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret

# ==================================================
# STRIPE (OPCIONAL - Para pagos de suscripciones)
# ==================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
